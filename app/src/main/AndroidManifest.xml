<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="chirikualii.com.footballapps">
    
    <uses-permission android:name="android.permission.INTERNET"/>
    
    <application
            android:name=".BaseApp"
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity android:name=".presentation.ui.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".presentation.ui.detailmatch.DetailMatchActivity">
        </activity>
        <activity android:name=".presentation.ui.resultsearch.ResultSearchActivity">
        </activity>
        <activity android:name=".presentation.ui.detailteam.DetailTeamActivity">
        </activity>
        <activity android:name=".presentation.ui.detailteam.detailplayerteam.DetailPlayerActivity">
        </activity>
    </application>

</manifest>